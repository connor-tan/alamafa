<configuration>
    <property name="ALAMAFA_LOG_LEVEL" value="${ALAMAFA_LOG_LEVEL:-INFO}"/>
    <property name="ALAMAFA_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${ALAMAFA_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="${ALAMAFA_LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>

