<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.alamafa.sample.jfx.AboutViewController"
      alignment="CENTER" spacing="12">
    <padding>
        <Insets top="24" bottom="24" left="24" right="24"/>
    </padding>
    <Label fx:id="infoLabel" wrapText="true" maxWidth="360" textAlignment="CENTER"/>
    <Button fx:id="closeButton" text="Close" onAction="#handleClose"/>
</VBox>
